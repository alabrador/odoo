<odoo>
    <record id="view_rental_order_form" model="ir.ui.view">
        <field name="name">rental.order.form</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <form string="Rental Order">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="product_id"/>
                        <field name="rental_date_start"/>
                        <field name="rental_date_end"/>
                        <field name="state" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_rental_order_tree" model="ir.ui.view">
        <field name="name">rental.order.tree</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <tree string="Rental Orders">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="rental_date_start"/>
                <field name="rental_date_end"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_rental_root" name="Rental Management" sequence="10"/>
    <menuitem id="menu_rental_orders" name="Rental Orders" parent="menu_rental_root" action=""/>
</odoo>
